{% extends "layout.twig" %}

{% block content %}

<div class="bk-default">

    <!-- Container -->
    <div class="container">

        <!-- Page Content -->
        <section class="template-content">

            <!-- Template Widgets -->
            <div class='theme-header flex-container'>

                <div class="flex-item">
                    <div class="brand">
                        {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
                        {{widget('companyname', 'companyname', {"business": "profile", "showTplWidget":"0"})|raw}}
                    </div>
                </div>

                <div class="flex-item">
                    {{widget('extendednavigation', 'navigation', {"align":"center"})|raw}}
                </div>

                <div class="flex-item">
                    {{widget('button', 'button', {text:'button', 'align':'widget-align-right'})|raw}}
                </div>

            </div>
            <div class="feature-arrow-down">
                {{widget('feature', 'featurehome', {
                    "header": "profile",
                    "defaultBgImg": asset('images/feature-bg.jpg'),
                    'positionTopPercentage': '0',
                    'showBtn': false,
                    buttonText: "Lorem Ipsum"
                })|raw}}
                <a href="#canvas" class="arrow-down">&#8964;</a>
            </div>

            <!-- End Template Widgets -->
            <div class="canvas" id="canvas">
                <!-- Main Widet Zone -->
                {{zone('main')|raw}}
            </div>
        </section>

        <div class="theme-footer">
            <div class="footer-container">
                {{widget('logo', 'logo-footer', {"defaultlogo": asset('images/logo.png')})|raw}}
                {{widget('content', 'content-footer', {content: 'This is a content widget.', lines: 'all'})|raw}}
            </div>
        </div>
    <!-- End Container -->
    </div>

</div>


{% endblock %}
