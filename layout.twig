<head>
	<meta charset="utf-8" />
	<title>{{ page.title }}</title>
	<meta name="keywords" content="{{ page.keywords }}" />
	<meta name="description" content="{{ page.description }}" />
	<meta http-equiv="content-language" content="{{ page.seoLang }}" />

	{% if site.favicon %}
		<link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
		<link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
	{% endif %}
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width,initial-scale=1">

	{% include basekit.headScript %}
</head>
<body class="{{ page.backgroundClass }}">

	{% block content %}
	{% endblock %}

    {% include basekit.bodyScript %}

    	<!-- Nav Menu Script -->

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
       <script>window.jQuery || document.write('<script src="{{ asset('libs/jquery-1.10.2.min.js')}}"><\/script>')
    </script>

	<script>

		// Adds 3 empty DIVs for creating the hamburger icon
    	$( ".navigation-toggle" ).append( "<div class='bar one'></div><div class='bar two'></div><div class='bar three'></div>" );

    	// Toggles class open to display/hide the whole navigation
    	$( ".navigation-toggle" ).click(function() {
  			$( ".bk-extendednavigation" ).toggleClass( "open" );
		});

    	// Togglse class open to display/hide folders
		$( ".navigation-item.folder" ).each(function() {
			$( this ).click(function() {
	  			$( this ).toggleClass( "open" );
			});
		});

	</script>

	<!--Homepage arrow down -->
	<script>
			$(document).ready(function(){
			$('a[href^="#"]').on('click',function (e) {
			    e.preventDefault();

			    var target = this.hash;
			    var $target = $(target);

			    $('html, body').stop().animate({
				     'scrollTop': $target.offset().top
				}, 900, 'swing');

			    
			});
		});
	</script>

</body>
</html>
